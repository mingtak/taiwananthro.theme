<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="taiwananthro.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<div class="metadata" tal:content="structure context/metaData/raw"></div>
<hr>

<tal:paid switch="view/paid">
  <tal:notPaid case="False">
    <p>本文為付費文章</p>
  </tal:notPaid>


  <tal:paid case="True">
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#abstract" i18n:translate="">Abstract</a></li>
  <li><a data-toggle="tab" href="#fulltext" i18n:translate="">Full Text</a></li>
  <li><a data-toggle="tab" href="#pdf-tile" i18n:translate="">PDF</a></li>
</ul>

<div class="tab-content">
  <div id="abstract" class="tab-pane fade in active">
    <h3 class="tab-h3" i18n:translate="">Abstract</h3>
    <div tal:content="structure context/abstract/raw"></div>
  </div>
  <div id="fulltext" class="tab-pane fade">
    <h3 class="tab-h3" i18n:translate="">Full Text</h3>
    <div tal:content="structure context/text/raw"></div>
  </div>
  <div id="pdf-tile" class="tab-pane fade">
    <h3 class="tab-h3" i18n:translate>PDF File</h3>
    <iframe src="${python:'%s/@@display-file/file/%s' %(view.context.absolute_url(), view.context.file.filename)}"
          width="100%" height="100%" style="height:600px">
          This browser does not support PDFs. Please download the PDF to view it:
        <a href="${python:'%s/@@display-file/file/%s' %(view.context.absolute_url(), view.context.file.filename)}">Download PDF</a>
    </iframe>
  </div>
</div>
  </tal:paid>

</tal:paid>

</metal:content-core>
</metal:content-core>

</body>
</html>
